// Allow read to public character/puzzle data, restrict writes to functions
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /characters/{publisher}/items/{id} {
      allow read: if true;
      // Allow writes from Firebase Functions (no auth context) or admin users
      allow write: if request.auth == null || (request.auth != null && request.auth.token.admin == true);
    }
    match /puzzles/{date} {
      allow read: if true;
      // Allow writes from Firebase Functions (no auth context) or admin users
      allow write: if request.auth == null || (request.auth != null && request.auth.token.admin == true);
    }
    match /users/{uid}/guesses/{doc} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
  }
}