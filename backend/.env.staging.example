# Staging Environment Configuration
# Copy this file to .env.staging and fill in the actual values

# Application Configuration
APP_ENV=staging
DEBUG=true
LOG_LEVEL=DEBUG

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# CORS Configuration
ALLOWED_ORIGINS=https://comicguess-staging.vercel.app,http://localhost:3000,https://localhost:3000

# Database Configuration (Firebase Firestore)
FIREBASE_PROJECT_ID=your-firebase-project-staging
FIREBASE_PRIVATE_KEY=your-firebase-private-key-staging
FIREBASE_CLIENT_EMAIL=your-firebase-client-email-staging

# Storage Configuration (Firebase Storage)
FIREBASE_STORAGE_BUCKET=your-firebase-storage-bucket-staging

# Authentication Configuration
JWT_SECRET_KEY=your-staging-jwt-key-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=20
RATE_LIMIT_WINDOW=60
RATE_LIMIT_STORAGE=memory

# Security Configuration
BCRYPT_ROUNDS=10
SESSION_SECRET=your-staging-session-secret

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_TIMEOUT=30

# Secrets Management (Optional)
SECRETS_MANAGER_URL=https://your-secrets-manager-staging.com/
SECRETS_CLIENT_ID=your-staging-client-id
SECRETS_CLIENT_SECRET=your-staging-client-secret

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=3