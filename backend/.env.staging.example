# Staging Environment Configuration
# Copy this file to .env.staging and fill in the actual values

# Application Configuration
APP_ENV=staging
DEBUG=true
LOG_LEVEL=DEBUG

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# CORS Configuration
ALLOWED_ORIGINS=https://comicguess-staging.vercel.app,http://localhost:3000,https://localhost:3000

# Database Configuration (Azure Cosmos DB)
COSMOS_ENDPOINT=https://your-cosmos-staging.documents.azure.com:443/
COSMOS_KEY=your-cosmos-staging-key
COSMOS_DATABASE_NAME=comicguess-staging
COSMOS_CONTAINER_USERS=users
COSMOS_CONTAINER_PUZZLES=puzzles
COSMOS_CONTAINER_GUESSES=guesses

# Storage Configuration (Azure Blob Storage)
AZURE_STORAGE_ACCOUNT_NAME=your-storage-staging
AZURE_STORAGE_ACCOUNT_KEY=your-storage-staging-key
AZURE_STORAGE_CONTAINER_NAME=character-images-staging

# Authentication Configuration
JWT_SECRET_KEY=your-staging-jwt-key-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=20
RATE_LIMIT_WINDOW=60
RATE_LIMIT_STORAGE=memory

# Security Configuration
BCRYPT_ROUNDS=10
SESSION_SECRET=your-staging-session-secret

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_TIMEOUT=30

# Azure Key Vault (Optional)
AZURE_KEY_VAULT_URL=https://your-keyvault-staging.vault.azure.net/
AZURE_CLIENT_ID=your-staging-client-id
AZURE_CLIENT_SECRET=your-staging-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=3