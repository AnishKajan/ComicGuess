# Production Environment Configuration
# Copy this file to .env.production and fill in the actual values

# Application Configuration
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2

# CORS Configuration
ALLOWED_ORIGINS=https://comicguess.vercel.app,https://www.comicguess.com

# Database Configuration (Azure Cosmos DB)
COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_KEY=your-cosmos-primary-key
COSMOS_DATABASE_NAME=comicguess
COSMOS_CONTAINER_USERS=users
COSMOS_CONTAINER_PUZZLES=puzzles
COSMOS_CONTAINER_GUESSES=guesses

# Storage Configuration (Azure Blob Storage)
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_STORAGE_CONTAINER_NAME=character-images

# Authentication Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60
RATE_LIMIT_STORAGE=memory

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_TIMEOUT=30

# Azure Key Vault (Optional)
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
AZURE_CLIENT_ID=your-service-principal-client-id
AZURE_CLIENT_SECRET=your-service-principal-secret
AZURE_TENANT_ID=your-azure-tenant-id

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5