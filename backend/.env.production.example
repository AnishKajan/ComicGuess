# Production Environment Configuration
# Copy this file to .env.production and fill in the actual values

# Application Configuration
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2

# CORS Configuration
ALLOWED_ORIGINS=https://comicguess.vercel.app,https://www.comicguess.com

# Database Configuration (Firebase Firestore)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Storage Configuration (Firebase Storage)
FIREBASE_STORAGE_BUCKET=your-firebase-storage-bucket

# Authentication Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60
RATE_LIMIT_STORAGE=memory

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_TIMEOUT=30

# Secrets Management (Optional)
SECRETS_MANAGER_URL=https://your-secrets-manager.com/
SECRETS_CLIENT_ID=your-client-id
SECRETS_CLIENT_SECRET=your-client-secret

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5